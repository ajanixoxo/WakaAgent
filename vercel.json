{
    "version": 2,
    "builds": [
      {
        "src": "backend/vercel.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/dist/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/vercel.js"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/assets/(.*)",
        "dest": "/frontend/dist/assets/$1"
      },
      {
        "src": "/(.*\\.[a-z0-9]{8}\\.(js|css))",
        "dest": "/frontend/dist/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/dist/index.html"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    },
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://vercel.live; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://*.vercel.app https://*.vercel.live;"
          }
        ]
      }
    ]
  }
  
  